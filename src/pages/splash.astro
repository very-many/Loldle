---
import ChampSelect from "../components/champSelect.astro";
import Layout from "../layouts/Layout.astro";
import ClassicGuess from "../components/classicGuess.astro";
import Reset from "../components/reset.astro";
import MainContainer from "../components/mainContainer.astro";
import Tip from "../components/tip.astro";

import { getAllChampions } from "../pages/api/request.ts";
import SplashHint from "../components/splashHint.astro";

export const prerender = false; // Disable prerendering for this page

const champions = await getAllChampions();

const mode = "Splash";
---


<Layout title="Splash Boldle">
    <MainContainer>
        <!-- <Tip type="Title" hint={champions.answer.title} /> -->
        <SplashHint championAnswer={champions.answer} version={champions.version} />
        <ChampSelect champions={champions} mode={mode}/>
        <ClassicGuess champions={champions} mode={mode} />
        <Reset />
    </MainContainer>
</Layout>
